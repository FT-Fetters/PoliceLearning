<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lyun.policelearning.dao.CourseTypeDao">
    <select id="getAll" resultType="CourseType">SELECT * FROM course_type</select>
    <select id="getById" resultType="CourseType">SELECT * FROM course_type WHERE id=#{id}</select>
    <select id="getByName" resultType="CourseType">SELECT * FROM course_type WHERE name=#{name}</select>
</mapper>